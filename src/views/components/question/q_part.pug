block q_part
    each part in parts
        case part.type 
            when 'p'
                each para in part.values
                    p(class="q_part_d") #{para}
            
            when 'code'
                each code in part.values 
                    pre(class="code_block")
                        button(type="button" class="copy_button" onclick="copy_code(event)")
                            i.fa-regular.fa-copy.no-click
                        code #{code}
            
            when 'li'
                ul
                    each item in part.values 
                        li #{item}

script. 
    function copy_code(event) {
        const codeElement = event.target.parentElement.children[1];
        const textArea = document.createElement('textarea');
        textArea.value = codeElement.textContent;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
    }